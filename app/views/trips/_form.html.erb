<%= form_with(model: trip, local: true) do |form| %>
  <% if trip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(trip.errors.count, "error") %> prohibited this trip from being saved:</h2>

      <ul>
      <% trip.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :number_of_days %>
    <%= form.number_field :number_of_days %>
  </div>

  <div class="field">
    <%= form.label :number_of_nights %>
    <%= form.number_field :number_of_nights %>
  </div>

  <div class="field">
    <%= form.label :commute, value: 'Commute (hours)' %>
    <%= form.number_field :commute %>
  </div>



  <div class="actions">
    <%= form.submit 'Submit', class: 'btn btn-primary' %>
  </div>
