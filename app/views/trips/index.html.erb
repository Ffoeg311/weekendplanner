<h1>Trips</h1>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Days</th>
      <th>Nights</th>
      <th>Commute(hours)</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.title %></td>
        <td><%= trip.number_of_days %></td>
        <td><%= trip.number_of_nights %></td>
        <td><%= trip.commute %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

